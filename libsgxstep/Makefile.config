DELL_INSPIRON_7359   = 1
DELL_OPTIPLEX_7040   = 2
DELL_LATITUDE_7490   = 3

SGX_STEP_PLATFORM=DELL_INSPIRON_7359
ifeq ($(LAPTOP),1)
    SGX_STEP_PLATFORM=DELL_LATITUDE_7490
endif
ifeq ($(DESKTOP),1)
    SGX_STEP_PLATFORM=DELL_OPTIPLEX_7040
endif
export SGX_STEP_PLATFORM

ifndef NO_SGX
   export NO_SGX=0
endif

CFLAGS              += -DSGX_STEP_PLATFORM=$(SGX_STEP_PLATFORM) -DNO_SGX=$(NO_SGX)
